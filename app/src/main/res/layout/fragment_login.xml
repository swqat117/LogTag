<LinearLayout android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_login_person"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_mail_black_24dp"
            android:background="@drawable/et_underline_rect_color"
            android:alpha=".5"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content" />

        <com.quascenta.petersroad.widget.LogTagEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/LogTagEditTextStyle"
            />

        <ImageView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_pass"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_login_passkey"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_vpn_key_black_24dp"
            android:background="@drawable/et_underline_rect_color"
            android:alpha=".5"

            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content" />

        <com.quascenta.petersroad.widget.LogTagEditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/LogTagEditTextStyle"/>





    </LinearLayout>
    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_marginTop="32dp"

        android:layout_gravity="bottom|center_horizontal"

        android:orientation="vertical"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/Login"
            style="?metaButtonBarButtonStyle"
            android:textColor="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Sign in" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.google.android.gms.common.SignInButton
            android:id="@+id/gmail_login"
            android:layout_height="36dp"
            android:layout_width="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_login_forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Forgot Password? Click here"/>
    </LinearLayout>
</LinearLayout>
